{
  "name": "@akashic/bmpfont-generator",
  "version": "4.0.5",
  "description": "generate bitmap fonts from TrueType fonts",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "clean": "rimraf lib",
    "build": "tsc -p .",
    "test": "npm run build && jest && npm run lint",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "eslint src/**/*.ts --fix",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "bin": {
    "bmpfont-generator": "./bin/bmpfont-generator"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/bmpfont-generator.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "README.md",
    "package.json",
    "bin",
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.6.1",
    "commander": "^4.1.0",
    "opentype.js": "1.3.4",
    "pngquant": "^3.0.0"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^0.1.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.6",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "blink-diff": "^1.0.12",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "24.9.0",
    "mock-fs": "4.10.4",
    "pngparse": "^2.0.1",
    "remark-cli": "^7.0.0",
    "remark-lint": "^6.0.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4"
  }
