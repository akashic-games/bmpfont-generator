{
  "name": "@akashic/bmpfont-generator",
  "version": "5.0.0",
  "description": "generate bitmap fonts from TrueType fonts",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "clean": "rimraf lib",
    "build": "tsc -p .",
    "test": "npm run build && jest && npm run lint",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "eslint \"{src,spec}/**/*.ts\" --fix",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "bin": {
    "bmpfont-generator": "./bin/bmpfont-generator"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/bmpfont-generator.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "README.md",
    "package.json",
    "bin",
    "lib"
  ],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.70",
    "commander": "^4.1.0",
    "opentype.js": "1.3.4",
    "pngquant": "^4.2.0"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/parser": "^8.9.0",
    "blink-diff": "^1.0.12",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^28.10.0",
    "jest": "^29.7.0",
    "mock-fs": "4.10.4",
    "pngparse": "^2.0.1",
    "remark-cli": "^7.0.0",
    "remark-lint": "^6.0.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.0.0"
  }
